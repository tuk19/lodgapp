<%= render "shared/sidebar" %>
<div>
    <h2>アカウント</h2>
    <table>
        <tr>
            <th>id</th>
            <td><%= @user.id %></td>
        </tr>
        <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
        </tr>
        <tr>
            <th>パスワード</th>
            <td><%= "*" * (@user.encrypted_password.length/10) %>
        </tr>
    </table>
    <div class="edit_user">
        <%= link_to "編集", edit_user_registration_path(current_user) %>
        <%#= link_to "user編集", edit_user_path(current_user) %> <%# current_userを使ってuser/editへ行く%>
    </div>
</div>
