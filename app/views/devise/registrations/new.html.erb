<div class="registration_top">
  <h2 class="new-account">新しいアカウントを作成</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <span class="essential">必須</span>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー名", class: "form-text" %>
    </div>
    <div class="field">
      <span class="essential">必須</span>
      <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", class: "form-text" %>
    </div>
    <div class="field">
      <span class="essential">必須</span>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "form-text" %>
    </div>
    <div class="field">
      <span class="essential">必須</span>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認", class: "form-text" %>
    </div>
    <div class="actions">
      <%= f.submit "新しいアカウントを作成する", class: "account-submit new-account-submit" %>
    </div>
  <% end %>
  <%= link_to "すでにアカウントをお持ちの方はログイン", new_user_session_path, class: "goto-session" %>
</div>
