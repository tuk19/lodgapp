<div class="flex">
    <div class="left-nav-menu">
        <%= render "shared/sidebar_inn" %>
    </div>
    <div class="room-regist">
        <%= render "shared/error", obj:@inn %>
        <div class="room-regist-item">
            <h2 class="room-regist-title">ルーム情報登録</h2>
            <%= form_for @inn do |f| %>
                <table>
                    <div class="flex room-regist-box">
                        <div class= "room-regist-label-box">
                            <p class="room-regist-label"><%= f.label :name, "ルーム名" %><span class="essential left-margin">必須</span></p>
                        </div>
                        <div class="room-field"><%= f.text_field :name, placeholder: "ルーム名を入力", class: "room-form-text" %></div>
                    </div>
                    <div class="flex room-regist-box top-margin">
                        <div class= "room-regist-label-box">
                            <p class="room-regist-label"><%= f.label :introduction, "ルーム紹介" %><span class="essential left-margin">必須</span></p>
                        </div>
                        <div class="room-field"><%= f.text_area :introduction, placeholder:"ルーム説明を入力", class: "room-form-area" %></div>
                    </div>
                    <div class="flex room-regist-box top-margin">
                        <div class= "room-regist-label-box">
                            <p class="room-regist-label"><%= f.label :price, "料金"%><span class="essential left-margin">必須</span></p>
                        </div>
                        <div class="room-field"><%= f.number_field :price, placeholder: "一日あたりの料金を入力", class: "room-form-text" %></div>
                    </div>
                    <div class="flex room-regist-box top-margin">
                        <div class= "room-regist-label-box">
                            <p class="room-regist-label"><%= f.label :address, "住所" %><span class="essential left-margin">必須</span></p>
                        </div>
                        <div class="room-field"><%= f.text_field :address, placeholder:"住所を入力", class: "room-form-text" %></div>
                    </div>
                    <div class="flex room-regist-box top-margin">
                        <div class= "room-regist-label-box">
                            <p class="room-regist-label"><%= f.label :image, "ルーム画像" %><span class="essential left-margin">必須</span></p>
                        </div>
                        <div><%= f.file_field :image %></div>
                    </div>
                </table>
                <%= f.submit "登録", class: "account-submit room-submit" %>
            <% end %>
        </div>
    </div>
</div>
